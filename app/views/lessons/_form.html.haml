

=form_for :lesson, {url: "/students/#{@student.id}/lessons"} do |f|
	.form_group.col-xs-12
		=f.label :date
		=f.date_field :date, required: true, :value => Time.now.strftime('%Y-%m-%d')
	.form_group.col-xs-12
		=f.submit class: 'btn btn-primary'
	.div.col-xs-12
		%a.btn.btn-secondary{:href => "/students/#{@student.id}/lessons"} Cancel