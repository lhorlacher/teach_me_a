	%button.btn.btn-danger= link_to 'Profile', profile_path(current_user)
	%button.btn.btn-danger= link_to 'Sign Out', destroy_user_session_path, method: :delete
- else
	%button.btn.btn-danger= link_to 'Sign Up', new_user_registration_path
	%button.btn.btn-danger= link_to 'Sign In', new_user_session_path

